<UserControl x:Class="WorldMapZoneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FeneMonManagerWPF"
             mc:Ignorable="d"
             >
    <Border BorderThickness="1" BorderBrush="Black">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFB1FFFF" Offset="0.574"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <DockPanel LastChildFill="True">
            <Label>Type</Label>
            <Label Content="{Binding Affinity}"></Label>
            <Label>Number Of Zones</Label>
            <Label Content="{Binding Gym.GymZones.Count}"></Label>
            <Label>Player Owned</Label>
            <Label Content="{Binding IsPlayerHome}"></Label>
            <Button x:Name="btnViewGym">View Gym</Button>
        </DockPanel>
    </Border>

</UserControl>
